<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rltLyt"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/fondo">

    <TextView
        android:id="@+id/tvwIntentos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/tvwIntentos"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:textSize="@dimen/tamTexto" />

    <TextView
        android:id="@+id/tvwInstruccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="302dp"
        android:text="@string/tvwInicio"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/tamTexto" />

    <EditText
        android:id="@+id/edtxtIntroNumero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="76dp"
        android:ems="10"
        android:hint="@string/et_numero_hint"
        android:inputType="numberDecimal"
        android:textSize="@dimen/tamTexto"/>

    <Button
        android:id="@+id/btnPrueba"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/btnPrueba"
        android:textAlignment="center"
        android:textSize="@dimen/tamTexto"
        android:background="@color/fondoBoton"
        android:textColor="@color/black"/>




</RelativeLayout>